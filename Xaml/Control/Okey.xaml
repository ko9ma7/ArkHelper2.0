<UserControl x:Class="ArkHelper.Xaml.Control.OK"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ArkHelper.Xaml.Control"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <WrapPanel Orientation="Vertical">
        <materialDesign:PackIcon Width="100"
                                 Height="100"
                                 HorizontalAlignment="Center"
                                 Kind="Check" />
        <TextBlock HorizontalAlignment="Center" FontSize="{StaticResource h1}">
            <Run Text="{Binding Text}" />
            配置完毕</TextBlock>
        <TextBlock HorizontalAlignment="Center" FontSize="{StaticResource p}">
            欢迎使用<Run Text="{Binding Text}" />
            ！</TextBlock>
    </WrapPanel>
</UserControl>
