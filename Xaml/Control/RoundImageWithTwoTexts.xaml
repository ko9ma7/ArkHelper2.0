<UserControl x:Class="ArkHelper.Xaml.Control.RoundImageWithTwoTexts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ArkHelper.Xaml.Control"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid>
            <Image Name="image"
                   Width="40"
                   Height="40">
                <Image.Clip>
                    <RectangleGeometry RadiusX="20"
                                       RadiusY="20"
                                       Rect="0,0,40,40" />
                </Image.Clip>
            </Image>
        </Grid>
        <TextBlock Margin="15,0,0,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <Run Name="text1" FontSize="{StaticResource h2}">
                第1条文本
            </Run>
            <LineBreak />
            <Run Name="text2"
                 FontSize="{StaticResource p}"
                 Foreground="Gray">
                第2条文本
            </Run>
        </TextBlock>
    </WrapPanel>
</UserControl>
